<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="CardViewStyle">
        <item name="android:layout_marginLeft">@dimen/padding_normal_8</item>
        <item name="android:layout_marginRight">@dimen/padding_normal_8</item>
        <item name="android:layout_marginTop">@dimen/padding_normal_8</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal_8</item>
    </style>

    <style name="UtilsItemSpacing" parent="@style/SelectableItemBackground">
        <item name="android:paddingTop">@dimen/padding_normal_16</item>
        <item name="android:paddingBottom">@dimen/padding_normal_16</item>
        <item name="android:paddingRight">@dimen/padding_normal_16</item>
        <item name="android:paddingLeft">@dimen/padding_normal_16</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/rippleColor</item>
    </style>
    <style name="UtilsMediumTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/util_normal_text_sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
